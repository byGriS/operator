                <Label x:Name="l19" Content="связь Ок"/>
                <Label x:Name="l20" Content="связь Ок"/>
            </StackPanel>
        </Grid>
        <StackPanel  Grid.Row="1" Background="Gray" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Content="Закрыть" Padding="3" Click="Cancel_Click" Margin="3" Width="75"/>
            <Button Content="Обновить" Padding="3" Click="Refresh_Click" Margin="3" Width="75"/>
        </StackPanel>
    </Grid>
</Window>
