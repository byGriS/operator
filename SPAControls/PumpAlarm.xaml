<UserControl x:Class="SPAControls.PumpAlarm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SPAControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid Margin="15">
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <local:Boolean x:Name="elemFan" IsGrayBlue="True"  Title="Вентиляция" Value="0" Margin="5" Grid.Column="0" Grid.Row="0" SPAFontSize="20"/>
    <local:Boolean x:Name="elemG20" IsGrayRed="True" Title="Загазованность" Value="0" Margin="5" Grid.Column="1" Grid.Row="0" SPAFontSize="20"/>
    <local:Boolean x:Name="elemAlarm" IsGrayRed="True" Title="Пожарн. сигнализация" Value="0" Margin="5" Grid.Column="0" Grid.Row="1" SPAFontSize="20"/>
    <local:Boolean x:Name="elemG50" IsGrayRed="True" Title="Неисправность" Value="0" Margin="5" Grid.Column="1" Grid.Row="1" SPAFontSize="20"/>
  </Grid>
</UserControl>
  