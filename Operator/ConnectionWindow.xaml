                <Label Content="РВС МК176"/>
                <Label Content="РВС Орион"/>
                <Label Content="Поршневые насосы ТРМ"/>
                <Label Content="Поршневые насосы МК"/>
                <Label Content="Задвижки1"/>
                <Label Content="Задвижки2"/>
                <Label Content="УПЭС1"/>
                <Label Content="УПЭС2"/>
                <Label Content="УПЭС3"/>
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Label x:Name="l1" Content="связь Ок"/>
                <Label x:Name="l2" Content="связь Ок"/>
                <Label x:Name="l3" Content="связь Ок"/>
                <Label x:Name="l4" Content="связь Ок"/>
                <Label x:Name="l5" Content="связь Ок"/>
