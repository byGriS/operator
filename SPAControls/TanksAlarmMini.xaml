<UserControl x:Class="SPAControls.TanksAlarmMini"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SPAControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition/>
      <ColumnDefinition/>
    </Grid.ColumnDefinitions>
    <Grid Grid.Column="0" Grid.Row="3" Margin="15">
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <local:Valve x:Name="elemVA" Title="Задвижка А" Value="0" Margin="5" Grid.Column="0" Grid.Row="0" Visibility="Collapsed"/>
      <local:Valve x:Name="elemVB" Title="Задвижка В" Value="0" Margin="5" Grid.Row="1" Visibility="Collapsed"/>
    </Grid>
    <Grid Grid.Column="1" Grid.Row="3" Margin="15">
      <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition/>
      </Grid.RowDefinitions>
      <local:Boolean x:Name="elemG20" IsGrayRed="True" Title="Загазован. 20%" Value="0" Margin="5" Grid.Column="1" Grid.Row="0"/>
      <local:Boolean x:Name="elemG50" IsGrayRed="True" Title="Загазован. 50%" Value="0" Margin="5" Grid.Column="1" Grid.Row="1"/>
    </Grid>
  </Grid>
</UserControl>
